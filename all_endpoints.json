{
  "appointment_system_endpoints": {
    "auth_endpoints": {
      "base_url": "/api/auth",
      "endpoints": [
        {
          "method": "POST",
          "path": "/register",
          "description": "Register a new user",
          "request_body": "RegisterRequest",
          "response": "TokenResponse",
          "auth_required": false
        },
        {
          "method": "POST",
          "path": "/login",
          "description": "Login user and get tokens",
          "request_body": "LoginRequest",
          "response": "TokenResponse",
          "auth_required": false
        },
        {
          "method": "POST",
          "path": "/refresh",
          "description": "Refresh access token",
          "request_body": "RefreshTokenRequest",
          "response": "TokenResponse",
          "auth_required": false
        },
        {
          "method": "POST",
          "path": "/validate",
          "description": "Validate access token",
          "request_body": "Map<String, String>",
          "response": "TokenValidationResponse",
          "auth_required": false
        },
        {
          "method": "POST",
          "path": "/logout",
          "description": "Logout user",
          "request_body": "RefreshTokenRequest",
          "response": "Map<String, String>",
          "auth_required": true
        },
        {
          "method": "POST",
          "path": "/logout-all",
          "description": "Logout all user sessions",
          "request_body": "Authorization header",
          "response": "Map<String, String>",
          "auth_required": true
        }
      ]
    },
    "customer_endpoints": {
      "base_url": "/api/customer",
      "endpoints": [
        {
          "method": "GET",
          "path": "/appointments/show_active_appointments",
          "description": "Get all active appointments for the current customer",
          "request_body": "None",
          "response": "List<AppointmentDTO>",
          "auth_required": true,
          "role_required": "CUSTOMER"
        },
        {
          "method": "GET",
          "path": "/appointments/show_all_appointments",
          "description": "Get all appointments (including cancelled) for the current customer",
          "request_body": "None",
          "response": "List<AppointmentDTO>",
          "auth_required": true,
          "role_required": "CUSTOMER"
        },
        {
          "method": "GET",
          "path": "/appointments/show_appointment/{id}",
          "description": "Get a specific appointment by ID for the current customer",
          "request_body": "None",
          "response": "AppointmentDTO",
          "auth_required": true,
          "role_required": "CUSTOMER"
        },
        {
          "method": "DELETE",
          "path": "/appointments/cancel_appointment/{id}",
          "description": "Cancel an appointment by ID for the current customer",
          "request_body": "None",
          "response": "String message or 404",
          "auth_required": true,
          "role_required": "CUSTOMER"
        }
      ]
    },
    "appointment_endpoints": {
      "base_url": "/api/appointments",
      "endpoints": [
        {
          "method": "GET",
          "path": "/available-slots",
          "description": "Get available appointment slots for a service on a specific date",
          "request_body": "serviceId (query param), date (query param)",
          "response": "List<AvailableSlotDTO>",
          "auth_required": false
        }
      ]
    },
    "admin_endpoints": {
      "base_url": "/api/admin",
      "endpoints": [
        {
          "method": "GET",
          "path": "/users/show_all_users",
          "description": "Get all users in the system",
          "request_body": "None",
          "response": "List<UserResponse>",
          "auth_required": true,
          "role_required": "ADMIN"
        },
        {
          "method": "POST",
          "path": "/users/create_user",
          "description": "Create a new user",
          "request_body": "CreateUserRequest",
          "response": "UserResponse",
          "auth_required": true,
          "role_required": "ADMIN"
        },
        {
          "method": "PUT",
          "path": "/users/update_user/{id}",
          "description": "Update a user by ID",
          "request_body": "UpdateUserRequest",
          "response": "UserResponse",
          "auth_required": true,
          "role_required": "ADMIN"
        },
        {
          "method": "DELETE",
          "path": "/users/delete_user/{id}",
          "description": "Delete a user by ID",
          "request_body": "None",
          "response": "NoContent",
          "auth_required": true,
          "role_required": "ADMIN"
        },
        {
          "method": "POST",
          "path": "/services/create",
          "description": "Create a new service",
