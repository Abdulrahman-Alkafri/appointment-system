          "response": "ServiceResponse",
          "auth_required": true,
          "role_required": "ADMIN"
        },
        {
          "method": "POST",
          "path": "/services/link-to-staff",
          "description": "Link a service to staff members",
          "request_body": "LinkServiceToStaffRequest",
          "response": "ServiceResponse",
          "auth_required": true,
          "role_required": "ADMIN"
        },
        {
          "method": "GET",
          "path": "/working-schedules",
          "description": "Get all working schedules",
